{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "baseUrl": "src",
    "paths": {
      "@tbgen/env/*": ["environments/*"],
      "@tbgen/modules/*": ["app/modules/*"],
      "@tbgen/mock/*": ["assets/mock/*"],
      "@tbgen/assets/*": ["assets/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
